        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <span>
                 <!--Robar icono -->
                 {city}, {region}
            </span>
            <footer>
                {
                    email && (
                        <a href={`mailto:${email}`}
                        title={`Enviar un correo electrÃ³nico a ${name} al correo ${email}`}
