---
 import Section from "@/components/Section.astro"
 import { education } from "@cv"

---
<Section title="Educación">

    <ul>
        {education.map (({institution, startDate, endDate, area, summary, highlights}) => {

            const startYear = new Date(startDate).getFullYear()
            const endYear = endDate != null ? new Date(endDate).getFullYear() : "Actual"
            const years = `${startYear} - ${endYear}`

            return (
                <li>
                    <article>
                        <header>
                            <div class="job-info">
                                <h3>{institution}</h3>
                                <h4>{area}</h4>
                            </div>

                            <time>{years}</time>
                        </header>

                        <footer>                            
                            <p>{summary}</p>
                        </footer>
                    </article>
                </li>
            )
        })}
    </ul>

</Section>

<style>

    ul {
        padding: 0;
        margin: 0;
        list-style-type: none;
        letter-spacing: normal;
    }

    li {
        margin-bottom: 24px; /* Añade un margen entre cada componente de experiencia */
    }

    article {
        padding: 0;
        margin: 0;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start; /* Alinea h3 y time desde la parte superior */
        padding: 0;
        margin: 0;
    }

    .job-info {
        max-width: 70%;
        /* Ajusta el ancho del contenedor */
        margin-top: 0;
    }

    h3 {
        margin: 0;
        font-weight: 450;
        color: #111;
        line-height: 1.2;
        font-size: 1rem; /* Establece el tamaño de la fuente */
    }

    h4 {
        margin: 6px 0 8px 0;
        font-weight: 390;
        color: #333;
        line-height: 1.2;
        font-size: 0.85rem;
    }

    time {
        color: #555;
        white-space: nowrap;
        text-align: right;
        margin-top: 0; /* Elimina cualquier margen superior */
        align-self: flex-start; /* Alinea el time con el inicio del contenedor, a la altura del h3 */
        font-family: roboto, space mono, monospace, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		/* letter-spacing: -0.02em; */
		font-size: 1rem;
    }


    p {
        margin: 0;
        line-height: 1.4;
        color: #555;
    }

</style>